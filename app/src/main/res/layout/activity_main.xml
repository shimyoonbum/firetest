<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#d9ffa8"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EnjoyTravel
        로그인"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:background="#239930"
        android:fontFamily="@font/europe"
        android:textSize="90dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#d233f9"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID : "
            android:textSize="30dp"
            android:layout_marginLeft="60dp"
            android:fontFamily="@font/forest"
            />

        <EditText
            android:id="@+id/id"
            android:hint="아이디를 입력"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#59ffa8"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW  : "
            android:textSize="30dp"
            android:layout_marginLeft="40dp"
            android:fontFamily="@font/forest"
            />

        <EditText
            android:id="@+id/pw"
            android:hint="비밀번호 입력(영문, 숫자, 특수문자)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그인"/>
    <Button
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/auto"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="자동로그인"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn3"
        android:text="구글 계정으로 로그인"
        android:layout_marginTop="40dp"/>
</LinearLayout>